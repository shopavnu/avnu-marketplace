{
  "name": "avnu-marketplace-backend",
  "version": "0.0.1",
  "description": "Backend API for av | nu marketplace",
  "author": "av | nu team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npx nest build -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npx nest start",
    "start:dev": "npx nest start --watch",
    "start:debug": "npx nest start --debug --watch",
    "start:prod": "node dist/main",
    "init-search-indices": "node scripts/init-search-indices.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=50",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:perf": "jest --config ./test/jest-performance.json",
    "test:search": "jest --testPathPattern=src/modules/search",
    "test:search:cov": "jest --coverage --testPathPattern=src/modules/search",
    "test:search:e2e": "jest --config ./test/jest-e2e.json --testPathPattern=search",
    "test:enhanced-nlp": "ts-node scripts/test-enhanced-nlp.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@elastic/elasticsearch": "^8.10.0",
    "@nestjs/apollo": "^12.0.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cache-manager": "^2.3.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/elasticsearch": "^11.1.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/graphql": "^12.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@types/passport-local": "^1.0.38",
    "apollo-server-express": "^3.12.0",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.9.1",
    "cache-manager": "^5.7.6",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.10.0",
    "graphql-type-json": "^0.3.2",
    "natural": "^6.7.0",
    "oauth-1.0a": "^2.2.6",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "stopwords-en": "^0.3.0",
    "stripe": "^12.18.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@common/(.*)$": "<rootDir>/src/common/$1"
    }
  }
}
