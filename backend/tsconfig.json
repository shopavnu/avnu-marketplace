{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "useDefineForClassFields": false,
    "ignoreDeprecations": "5.0",
    "moduleResolution": "node", // Explicitly set moduleResolution
    "baseUrl": ".", // Needed for paths to work
    "paths": {
      "@clerk/backend": [
        "node_modules/@clerk/backend/dist/index.d.ts",
        "../node_modules/@clerk/backend/dist/index.d.ts"
      ],
      "@clerk/express": [
        "node_modules/@clerk/express/dist/index.d.ts",
        "../node_modules/@clerk/express/dist/index.d.ts"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ]
    }
  },
  "include": [ // Added include array
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["scripts/**/*", "node_modules", "dist", "__mocks__/**/*"]
}
