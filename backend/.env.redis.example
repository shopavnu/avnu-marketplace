# Redis Configuration for Avnu Marketplace
# Copy these settings to your .env.development or .env.production file

# Redis Connection Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL Settings (in seconds)
REDIS_TTL=3600                     # Default TTL (1 hour)
REDIS_MAX_ITEMS=1000               # Maximum number of items in cache
PRODUCT_CACHE_TTL=3600             # Product cache TTL (1 hour)
POPULAR_PRODUCTS_CACHE_TTL=1800    # Popular products cache TTL (30 minutes)
CATEGORY_PRODUCTS_CACHE_TTL=3600   # Category products cache TTL (1 hour)
MERCHANT_PRODUCTS_CACHE_TTL=3600   # Merchant products cache TTL (1 hour)

# Cache Warming Settings
CACHE_WARMING_ENABLED=true         # Enable/disable scheduled cache warming
