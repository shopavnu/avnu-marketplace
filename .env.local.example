# Authentication
CLERK_SECRET_KEY=test_secret_key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=test_publishable_key

# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://avnu:avnu_password@postgres:5432/avnu_db
DB_HOST=postgres
DB_PORT=5432
DB_USER=avnu
DB_PASSWORD=avnu_password
DB_NAME=avnu_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Elasticsearch
ELASTICSEARCH_NODE=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Search Settings
SEARCH_CACHE_ENABLED=true
SEARCH_CACHE_TTL=300
SEARCH_EXPERIMENTS_ENABLED=true
SEARCH_MONITORING_ENABLED=true

# Logging
LOG_LEVEL=debug

# Docker Settings
DOCKERFILE_FRONTEND=Dockerfile.dev
DOCKERFILE_BACKEND=Dockerfile.dev
DOCKERFILE_WORKER=Dockerfile.dev
WORKER_COMMAND=sh -c "npm run start:dev -- --worker"
